<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/img_transaction"
            android:layout_width="50dp"
            android:layout_marginStart="12dp"
            android:layout_height="50dp"
            app:cardCornerRadius="30dp"
            android:layout_centerVertical="true"
            android:elevation="0dp"
            android:padding="4dp"
            android:backgroundTint="@color/color_light_primary">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:background="@drawable/ic_transaction_color"/>

        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/txt_transaction_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:text="Cashback against Order ID"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@id/img_transaction"
            android:textColor="@color/flat_black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_expand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txt_transaction_details"
            android:layout_alignBottom="@+id/txt_transaction_details"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/txt_transaction_details"
            android:background="@drawable/ic_expand_more_24px" />



        <TextView
            android:id="@+id/txt_wallet_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"

            android:text=""
            android:layout_marginTop="14dp"
            android:layout_alignParentEnd="true"
            android:textSize="15sp"
            android:textColor="@color/flat_black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_transaction"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="14dp"
            android:layout_below="@id/txt_transaction_details"
            android:text="2order id"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:textSize="13sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txt_transaction_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_transaction"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="14dp"
            android:layout_below="@id/txt_order_id"
            android:text="20 june 1999"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="14dp"
            android:textSize="13sp"
            android:textStyle="bold" />

    </RelativeLayout>



    <View style="@style/Divider"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"/>


</LinearLayout>