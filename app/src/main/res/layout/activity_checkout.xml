<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckoutActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <FrameLayout
            android:id="@+id/layout_change_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:paddingBottom="22dp">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delivery Address"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/flat_black"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@drawable/bg_light_grey"

            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/txtName_Checkout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_marginBottom="2dp"
                android:layout_marginStart="6dp"
                android:textStyle="bold"

                android:textColor="@color/flat_black"
                android:text="Manoj Kumar" />

            <TextView
                android:id="@+id/txtAddresLine1_Checkout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/flat_black"
                android:layout_marginStart="6dp"
                android:text="Address Line 1" />

            <TextView
                android:id="@+id/txtAddresLine2_Checkout"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:textColor="@color/flat_black"
                android:layout_marginStart="6dp"
                android:layout_height="wrap_content"
                android:text="Address Line 2" />

            <TextView
                android:id="@+id/txtAddresLine3_Checkout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/flat_black"
                android:layout_marginStart="6dp"
                android:text="Address Line 3" />

            <TextView
                android:id="@+id/txtLandmark_Checkout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/flat_black"
                android:layout_marginStart="6dp"
                android:text="Landmark: " />

            <TextView
                android:id="@+id/txtCity_Checkout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/flat_black"
                android:layout_marginStart="6dp"
                android:text="City : " />

            <TextView
                android:id="@+id/txtState_Checkout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/flat_black"
                android:layout_marginStart="6dp"
                android:text="State : " />

            <TextView
                android:id="@+id/txtPincode_Checkout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/flat_black"
                android:layout_marginStart="6dp"
                android:text="Pin Code: " />

            <TextView
                android:id="@+id/txtContact_Checkout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:textStyle="bold"
                android:textColor="@color/flat_black"
                android:layout_marginStart="6dp"
                android:text="Contact No: " />

        </LinearLayout>



        <Button
            android:id="@+id/btn_change_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change / Add Address"
            android:layout_marginBottom="8dp"
            android:textColor="@color/white"
            android:background="@drawable/gradient" />



        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="2dp"
            android:background="@drawable/gradient" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:paddingTop="5dp"
                android:textSize="32sp"
                android:layout_marginStart="14dp"
                android:text="Net Payable: " />

            <TextView
                android:id="@+id/txtNetPayable_Checkout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:paddingTop="5dp"
                android:layout_marginStart="14dp"
                android:textSize="32sp"
                android:textColor="@color/mrp_color"
                android:text="15000 " />



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="2dp"
            android:background="@drawable/gradient" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txtWalletMoney"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:paddingTop="15dp"
                android:visibility="gone"
                android:text="Wallet Money: 2000 " />





        </LinearLayout>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use Wallet Money"
            android:visibility="gone"
            android:id="@+id/chkUseWalletMoney" />



            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pickup From Store"
                android:visibility="gone"
                android:id="@+id/chkPickupFromStore" />

        <LinearLayout
            android:id="@+id/layoutPickupFromStore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.github.jhonnyx2012.horizontalpicker.HorizontalPicker
                android:id="@+id/date_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_delivery_slots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/in_date"
                android:enabled="false"
                android:visibility="gone"
                android:layout_marginTop="10dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SELECT DATE"
                android:visibility="gone"
                android:id="@+id/btn_date" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:visibility="gone"
                android:id="@+id/in_time" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SELECT TIME"
                android:visibility="gone"
                android:id="@+id/btn_time" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/slotTimings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <RadioButton
                    android:id="@+id/slot0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    />

                <RadioButton
                    android:id="@+id/slot1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <RadioButton
                    android:id="@+id/slot2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </RadioGroup>

        </LinearLayout>




        <Button
            android:id="@+id/btn_offline_products"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Add Offline Products"
            android:visibility="gone"
            android:background="@drawable/gradient"/>




        <Button
            android:id="@+id/btnPayNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pay Now"
            android:layout_marginTop="10dp"
            android:onClick="onPayNow_Click"
            android:textColor="@color/white"
            android:background="@drawable/gradient"
            />

        <Button
            android:id="@+id/btnCOD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Cash on Delivery (COD)"
            android:onClick="onCOD_Click"
            android:textColor="@color/white"
            android:background="@drawable/gradient" />



    </LinearLayout>
    </RelativeLayout>


</ScrollView>