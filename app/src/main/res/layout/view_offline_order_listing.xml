<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="6dp"
    android:layout_margin="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_add_product"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_add_to_cart"/>

        <TextView
            android:id="@+id/txt_product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product name"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/img_add_product"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/product_title_color"/>

        <TextView
            android:id="@+id/txt_product_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity: "
            android:layout_marginBottom="4dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/img_add_product"
            android:layout_below="@id/txt_product_title"
            android:textSize="22sp"
            android:textColor="@color/black"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>