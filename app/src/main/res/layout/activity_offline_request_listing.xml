<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".OfflineRequestListing">

    <androidx.cardview.widget.CardView
        style="@style/CardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/cardview_shadow_start_color"
        android:baselineAligned="false"
        android:elevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/txtOrderDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/text_size_large"
                    android:text="Ordered on 23 June 2020" />


                <TextView
                    android:id="@+id/txtCompanyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Company Name"
                    android:textColor="@color/textBoxStroke"
                    />

                <TextView
                    android:id="@+id/txtAddresLine1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="AddressLine1"
                    android:textColor="@color/textBoxStroke"
                    />

                <TextView
                    android:id="@+id/txtAddresLine2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="AddressLine2"
                    android:textColor="@color/textBoxStroke"
                    />

                <TextView
                    android:id="@+id/txtAddresLine3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="AddressLine3"
                    android:textColor="@color/textBoxStroke"
                    />

<!--                <TextView-->
<!--                    android:id="@+id/txtPhone"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginTop="5dp"-->
<!--                    android:text="Phone"-->
<!--                    android:textColor="@color/textBoxStroke"-->
<!--                    />-->

                <TextView
                    android:id="@+id/txttCityStatePin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="City - State - Pincode"
                    android:textColor="@color/textBoxStroke"
                    />

                <TextView
                    android:id="@+id/txtPayByCash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Pay By Cash: "
                    android:textColor="@color/textBoxStroke"
                    />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textBoxStroke"
                        android:id="@+id/txtProducts">

                    </TextView>

<!--                    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"-->
<!--                        android:id="@+id/table"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="match_parent"-->
<!--                        android:stretchColumns="1">-->
<!--                    </TableLayout>-->

                </LinearLayout>



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">




                        <TextView
                            android:id="@+id/txtOrderStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:textStyle="bold"
                            android:textColor="@color/savings_color"
                            android:text="Order Status" />

                    </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutAcceptReject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">



                    <Button
                        android:id="@+id/btnAccept"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient"
                        android:text="Accept" />

                    <EditText
                        android:id="@+id/txtRejectionReason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Rejection Reason"/>

                    <Button
                        android:id="@+id/btnReject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/gradient"
                        android:text="Reject" />
                </LinearLayout>




            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>