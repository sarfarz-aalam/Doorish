                </LinearLayout>
                <TextView
                    android:id="@+id/txtLandmark_Shop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Lankmark" />

                <TextView
                    android:id="@+id/txtCity_Shop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="City" />

                <TextView
                    android:id="@+id/txtPincode_Shop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="PIncode" />

                <TextView
                    android:id="@+id/txtTimings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Timings" />

                <TextView
                    android:id="@+id/txtOfers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/text_size_large"
                    android:text="" />

                <TextView
                    android:id="@+id/txtAboutShop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="" />

                <Button
                    android:id="@+id/btnHeartSeller"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_gravity="right"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/ic_favorite_border_24px"/>

                <Button
                    android:id="@+id/btnPostYourRequirement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Post Your Requirement"
                    android:layout_margin="5dp"
                    android:background="@drawable/gradient"/>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>